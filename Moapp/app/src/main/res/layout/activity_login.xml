<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="#F4B0B0"
    tools:context=".MainActivity">




    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/calenderimage"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:layout_gravity="center"
            android:src="@drawable/calender"></ImageView>

        <Button
            android:id="@+id/signupBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="47dp"
            android:backgroundTint="@color/white"
            android:padding="12dp"
            android:text="회원가입하기"
            android:textColor="#F4B0B0"
            android:textSize="20dp"
            android:textStyle="bold">


        </Button>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Made By 너는 지금 모앱"
            android:textColor="#ffff" />


        <EditText
            android:id="@+id/enter_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/calenderimage"
            android:layout_marginBottom="-429dp"
            android:gravity="center"
            android:hint="아이디 입력"
            android:textColorHint="@color/white"></EditText>

        <EditText
            android:id="@+id/enter_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/calenderimage"
            android:layout_marginBottom="-527dp"
            android:gravity="center"
            android:hint="비밀번호 입력"
            android:textColorHint="@color/white"></EditText>


    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="-2dp"
        android:layout_toLeftOf="@+id/enter_id"
        android:text="아이디"></TextView>


</LinearLayout>